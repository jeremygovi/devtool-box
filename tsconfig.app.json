{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2015",        // Cible les navigateurs modernes
    "module": "ESNext",        // Pour utiliser des modules ECMAScript
    "strict": true,            // Active le mode strict
    "jsx": "react-jsx",        // Si tu utilises React, sinon supprime
    "esModuleInterop": true,   // Pour faciliter l'import de modules CommonJS
    "skipLibCheck": true       // Désactive la vérification des types des fichiers `.d.ts`
  },
  "include": ["src/**/*"],      // Inclure tous les fichiers dans `src/`
  "exclude": ["node_modules", "dist"] // Exclure ces répertoires
}
